@model FSP.Domain.Model.AERecipient

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(p => p.AERecipientID)

    <fieldset>
        <legend>"@Model.AERecipientEmail"</legend>

        <div class="editor-label">
            Recipient Email
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.AERecipientEmail)
            @Html.ValidationMessageFor(model => model.AERecipientEmail)
        </div>

        <div class="editor-label">
            Report
        </div>
        <div class="editor-field">
            @Html.DropDownList("AEReportID", String.Empty)
            @Html.ValidationMessageFor(model => model.AEReportID)
        </div>

        <div class="editor-label">
            Frequency
        </div>
        <div class="editor-field">
            @Html.DropDownList("AEFrequencyID", String.Empty)
            @Html.ValidationMessageFor(model => model.AEFrequencyID)
        </div>

        <div class="editor-label">
            Report Type
        </div>
        <div class="editor-field">
            @Html.DropDownList("AEReportTypeID", String.Empty)
            @Html.ValidationMessageFor(model => model.AEReportTypeID)
        </div>

        @* <div class="editor-label">
        </div>
        <div class="editor-field">
            <label class="checkbox">
                @Html.EditorFor(model => model.AEIsContractor)
                Is Contractor
            </label>

            @Html.ValidationMessageFor(model => model.AEIsContractor)
        </div>*@

        <div class="editor-label">
            Contractor
        </div>
        <div class="editor-field">
            @Html.DropDownList("AEContractorID", String.Empty)
            @Html.ValidationMessageFor(model => model.AEContractorID)
        </div>

        <p>
            <input type="submit" value="Save" class="btn btn-primary" />
            <a href="~/EmailReport/Index" class="btn">Cancel</a>
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
