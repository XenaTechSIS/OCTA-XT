            @Html.DropDownList("AERecipientEmail", String.Empty)
            @Html.ValidationMessageFor(model => model.AERecipientEmail)
        </div>

        <div class="editor-label">
            Report
        </div>
        <div class="editor-field">
            @Html.DropDownList("AEReportID", String.Empty)
            @Html.ValidationMessageFor(model => model.AEReportID)
        </div>

        <div class="editor-label">
            Frequency
        </div>
        <div class="editor-field">
            @Html.DropDownList("AEFrequencyID", String.Empty)
            @Html.ValidationMessageFor(model => model.AEFrequencyID)
        </div>

        <div class="editor-label">
            Report Type
        </div>
        <div class="editor-field">
            @Html.DropDownList("AEReportTypeID", String.Empty)
            @Html.ValidationMessageFor(model => model.AEReportTypeID)
        </div>

