@model FSP.Domain.Model.AERecipient

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AERecipient</legend>

        <div class="editor-label">
            Recipient Email
        </div>
