<br />
<legend>Tow Information</legend>
<div class="row">
    <div class="span3">
        <label for="txtStartOD">StartOD</label>
        <input type="text" name="txtStartOD" id="txtStartOD" value="0.0" />
    </div>
    <div class="span3">
        <label for="txtEndOD">EndOD</label>
        <input type="text" name="txtEndOD" id="txtEndOD" value="0.0" />
    </div>
    <div class="span3">
        <label for="ddlTowLocations">Tow Location</label>
        <select name="ddlTowLocations" id="ddlTowLocations" class="bigSel"></select><!--auto loaded through AJAX, see LogAssist.js-->
    </div>
    <div class="span3">
        <label for="txtDropZone">Drop Zone</label>
        <input type="text" id="txtDropZone" />
    </div>
</div>

<br />
<legend>Customer Information</legend>
<div class="row">
    <div class="span3">
        <label for="txtTip">Tip</label>
        <input type="text" name="txtTip" id="txtTip" />
    </div>
    <div class="span3">
        <label for="txtTipDetail">Tip Detail</label>
        <input type="text" name="txtTipDetail" id="txtTipDetail" />
    </div>
    <div class="span3">
        <label for="CustLastName">Customer Last Name</label>
        <input type="text" name="txtCustomerLastName" id="txtCustomerLastName" />
    </div>
</div>

<br />
<legend>Other</legend>
<div class="row">
    <div class="span3">
        <label for="txtLogNumber">Log Number</label>
        <input type="text" name="txtLogNumber" id="txtLogNumber" />
    </div>
</div>
<br />
<div class="row">
    <div class="span12">
        <label>Comments</label>
        <textarea id="txtComments" class="span12" rows="7"></textarea>
    </div>
</div>

<br />
<div class="form-actions">
    <button class="btn btn-success btn-large" data-bind="click: postAssist, enable: !isBusy()">Submit</button>
</div>


@section Scripts{


    <script src="~/Scripts/bootstrap-timepicker.js"></script>
    <script src="~/Scripts/knockout-2.2.1.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/MyScripts/AssistEntry/AssistScript.js" type="text/javascript"></script>
}