@{
    ViewBag.Title = "Assist Entry";  
}

<h2>Assist Entry Screen</h2>
<link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />
<link href="~/Content/bootstrap-timepicker.css" rel="stylesheet" />

<br />

<div class="row">
    <div class="span3">
        <label>Service Date</label>
        <input id="txtServiceDate" type="text" class="span3 datepicker" placeholder="service date" />
    </div>
    <div class="span2">
        <label>Dispatch Time</label>
        <div class="input-append bootstrap-timepicker">
            <input type="text" id="txtDispatchTime" class="input-small timerpicker" placeholder="dispatch time" />
            <span class="add-on"><i class="fa fa-calendar"></i></span>
        </div>

    </div>
    <div class="span2">
        <label for="assistStart">Assist Start Time</label>
        <div class="input-append bootstrap-timepicker">
            <input type="text" id="txtAssistStartTime" placeholder="assist start time" class="input-small timerpicker" />
            <span class="add-on"><i class="fa fa-calendar"></i></span>
        </div>
    </div>
    <div class="span2">
        <label for="assistEnd">Assist End Time</label>
         <div class="input-append bootstrap-timepicker">
        <input type="text" id="txtAssistEndTime" placeholder="assist end time" class="input-small timerpicker" />
            <span class="add-on"><i class="fa fa-calendar"></i></span>
        </div>
        
    </div>
</div>

<br />
<br />

<div class="row">
    <div class="span3">
        <label for="ddlDrivers">Drivers</label>
        <select name="ddlDrivers" id="ddlDrivers" class="bigSel"></select><!--auto loaded through AJAX, see LogAssist.js-->
    </div>
    <div class="span3">
        <label for="ddlContractors">Contractors</label>
        <select name="ddlContractors" id="ddlContractors" class="bigSel"></select><!--auto loaded through AJAX, see LogAssist.js-->
    </div>
    <div class="span3">
        <label for="ddlVehicles">Vehicles</label>
        <select name="ddlVehicles" id="ddlVehicles" class="bigSel"></select><!--auto loaded through AJAX, see LogAssist.js-->
    </div>
    <div class="span3">
        <label for="ddlBeatNumbers">Beat Numbers</label>
        <select name="ddlBeatNumbers" id="ddlBeatNumbers" class="bigSel"></select><!--auto loaded through AJAX, see LogAssist.js-->
    </div>
</div>

<br />
<legend>Incident Information</legend>
<div class="row">
    <!--incident-->
    <div class="span3">
        <label for="ddlIncidentTypes">Incident Type</label>
        <select name="ddlIncidentTypes" id="ddlIncidentTypes" class="bigSel"></select><!--auto loaded through AJAX, see LogAssist.js-->
    </div>
    <div class="span3">
        <label for="ddlTrafficSpeeds">Traffic Speed</label>
        <select name="ddlTrafficSpeeds" id="ddlTrafficSpeeds" class="bigSel"></select>
    </div>
     <div class="span3">
        <label for="txtCustomerWaitTime">Customer Wait Time</label>
        <input type="text" name="txtCustomerWaitTime" id="txtCustomerWaitTime" value="0" />
    </div>
</div>

<br />
<div class="row">
    <div class="span4">
        <h4>Select Services Rendered</h4>
        <div id="services">
        </div>

    </div>
   
</div>

<br />
<legend>Location Information</legend>
<div class="row">
    <div class="span3">
        <label for="ddlFreeways">Freeway</label>
        <select name="ddlFreeways" id="ddlFreeways" class="bigSel"></select><!--auto loaded through AJAX, see LogAssist.js-->
    </div>
    <div class="span3">
        <label>Freeway Direction</label>
        <select id="ddlFreewayDirection" class="bigSel">
            <option selected>--Select--</option>
            <option>N</option>
            <option>S</option>
            <option>E</option>
            <option>W</option>
        </select>
    </div>
    <div class="span3">
        <label for="ddlVehiclePositions">Vehicle Position</label>
        <select name="ddlVehiclePositions" id="ddlVehiclePositions" class="bigSel"></select>
    </div>
    <div class="span3">
        <label>Location</label>
        @*JNO, JSO, JEO, JWO*@
        <select id="ddlDirection" class="bigSel">
            <option selected>--Select--</option>
            <option>AT</option>
            <option>JNO</option>
            <option>JSO</option>
            <option>JEO</option>
            <option>JWO</option>
        </select>
    </div>
</div>
<br />
<div class="row">
    <div class="span3">
        <label>Cross Street</label>
        <input type="text" id="txtStreet" name="txtStreet" />
    </div>
</div>

<br />
<legend>Vehicle Information</legend>
<div class="row">
    <!--vehicle-->
    <div class="span3">
        <label for="txtVehicleMake">Make</label>
        <input type="text" id="txtVehicleMake" />
    </div>
    <div class="span3">
        <label for="ddlVehicleTypes">Type</label>
        <select name="ddlVehicleTypes" id="ddlVehicleTypes" class="bigSel"></select>
    </div>
    <div class="span3">
        <label for="txtVehicleColor">Color</label>
        <input type="text" id="txtVehicleColor" />
    </div>
    <div class="span3">
        <label for="txtLicensePlate">Plate</label>
        <input type="text" id="txtLicensePlate" />
    </div>
</div>
