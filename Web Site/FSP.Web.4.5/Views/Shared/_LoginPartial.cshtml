@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.GetUserName() (@Roles.GetRolesForUser().FirstOrDefault()) <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Change Password", "ChangePassword", "Account", routeValues: null, htmlAttributes: new { title = "Change Password" })</li>                    
                    <li>@Html.ActionLink("Log Off", "LogOff", "Account", string.Empty, string.Empty, string.Empty, new { area = "" }, null)</li>
                </ul>
            </li>
        </ul>
    }
}
