@model IEnumerable<FSP.Domain.Model.Location>
@{
    ViewBag.Title = "Locations";
}

<p>
    @Html.ActionLink("Add Location", "Create")
</p>
<h2>Locations</h2>
<table class="table table-bordered table-condensed table-striped sortable">
    <thead>
        <tr>
            <th>Name
            </th>
            <th>Code
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Location1, "Edit", new { id = item.LocationID })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationCode)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.LocationID })
                </td>
            </tr>
        }
    </tbody>
</table>
