@model FSP.Domain.Model.Location
@{
    ViewBag.Title = "Edit " + @Model.Location1;
    
}
<div>
    @Html.ActionLink("Back to Locations", "Index")
</div>
<h2>Edit "@Model.Location1"</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Incident Type</legend>
        @Html.HiddenFor(model => model.LocationID)
        <div class="editor-label">
            @Html.LabelFor(model => model.Location1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Location1)
            @Html.ValidationMessageFor(model => model.Location1)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.LocationCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LocationCode)
            @Html.ValidationMessageFor(model => model.LocationCode)
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Update</button>
        </div>
    </fieldset>
}
