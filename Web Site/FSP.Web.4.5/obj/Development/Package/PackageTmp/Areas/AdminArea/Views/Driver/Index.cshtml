@model IEnumerable<FSP.Domain.Model.Driver>
@{
    ViewBag.Title = "Drivers";
}

<p>
    @Html.ActionLink("Add Driver", "Create")
</p>
<h2>Drivers</h2>
<p>Active</p>
<table class="table table-bordered table-condensed table-striped table-hover sortable">
    <thead>
        <tr>
            <th>Name
            </th>
            <th>Contractor
            </th>
            <th>License Number
            </th>
            <th>FSPID Number
            </th>
            <th>DOB
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(p => p.IsActive == true))
        {
            <tr>
                <td>
                    @Html.ActionLink(item.LastName + ", " + item.FirstName, "Edit", new { id = item.DriverID })
                </td>
                <td>
                    @Html.ActionLink(item.Contractor.ContractCompanyName, "Edit", "Contractor", null, null, null, new { id = item.ContractorID }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriversLicenseNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FSPIDNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @if (item.IsActive == true)
                    {                        
                        @Html.ActionLink("Disable", "Disable", new { id = item.DriverID });
                    }
                    else
                    {
                        @Html.ActionLink("Enable", "Enable", new { id = item.DriverID });
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<p>Inactive</p>
<table class="table table-bordered table-condensed table-striped table-hover sortable">
