@model FSP.Domain.Model.User
@{
    ViewBag.Title = "Delete " + @Model.FirstName + " " + @Model.LastName;
    
}
<div>
    @Html.ActionLink("Back to Users", "Index")
</div>
<h2>
    Delete @Model.FirstName @Model.LastName</h2>
<h3>
    Are you sure you want to delete this user?</h3>
@using (Html.BeginForm())
{
    <p>
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">
                Delete</button>
        </div>
    </p>
}
